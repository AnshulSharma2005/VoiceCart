{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowJs": false,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": ".",                  
    "paths": {
      "@shared/*": ["../shared/*"]   
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
